<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/black_cat"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.Tarot"
        tools:targetApi="31">

        <activity
            android:name=".CardInformation"
            android:exported="false"
            android:launchMode="singleTop"
            android:parentActivityName=".OneCardSpreadActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".OneCardSpreadActivity" />
            <intent-filter>
                <action android:name="com.example.tarot.CardInformation" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name=".CardInformationThree"
            android:exported="false"
            android:launchMode="singleTop"
            android:parentActivityName=".ThreeCardSpreadActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ThreeCardSpreadActivity" />
            <intent-filter>
                <action android:name="com.example.tarot.CardInformationThree" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name=".CardInformationFive"
            android:exported="false"
            android:launchMode="singleTop"
            android:parentActivityName=".FiveCardSpreadActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".FiveCardSpreadActivity" />
            <intent-filter>
                <action android:name="com.example.tarot.CardInformationFive" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name=".OneCardSpreadActivity"
            android:exported="false"
            android:launchMode="singleTop"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
            <intent-filter>
                <action android:name="com.example.tarot.OneCardSpreadActivity" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name=".FiveCardSpreadActivity"
            android:exported="false"
            android:launchMode="singleTop"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
            <intent-filter>
                <action android:name="com.example.tarot.FiveCardSpreadActivity" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ThreeCardSpreadActivity"
            android:exported="false"
            android:launchMode="singleTop"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
            <intent-filter>
                <action android:name="com.example.tarot.ThreeCardSpreadActivity" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>